{% apply spaceless -%}

  {% set o = this.options() %}

  {# Slot for custom content #}
  {% set slot_content %}{% block content %}{% endblock %}{% endset %}
  {% set has_content = slot_content is not empty %}
  {% set content = has_content ? slot_content : (o.label ?? '') %}

  <li>
    {% if o.tag == 'a' %}
      <a href="{{ o.href }}" class="{{ o.classes }}" {{ this.renderHtmlAttributes(o.attrs) | raw }}>
        {{ content|raw }}
      </a>
    {% else %}
      <button class="{{ o.classes }}" {{ this.renderHtmlAttributes(o.attrs) | raw }}>
        {{ content|raw }}
      </button>
    {% endif %}
  </li>

{%- endapply %}

