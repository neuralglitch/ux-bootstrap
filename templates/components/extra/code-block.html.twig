{% apply spaceless -%}

  {% set o = this.options() %}

  {# Slot for custom code content #}
  {% set slot_content %}{% block content %}{% endblock %}{% endset %}

  {# Content priority: Slot > Prop #}
  {% set has_content = slot_content is not empty %}
  {% set code_content = has_content ? slot_content : (o.code ?? '') %}

  <div class="{{ o.classes }}" {{ this.renderHtmlAttributes(o.attrs) | raw }}>

    {# Header (title, filename, or language) #}
    {% if o.title or o.filename or o.language %}
      <div class="code-block-header">
        {% if o.title %}
          <span class="code-block-title">{{ o.title }}</span>
        {% elseif o.filename %}
          <span class="code-block-filename">{{ o.filename }}</span>
        {% elseif o.language %}
          <span class="code-block-language">{{ o.language }}</span>
        {% endif %}

        {# Copy button #}
        {% if o.copyButton %}
          <button
              type="button"
              class="code-block-copy btn btn-sm btn-outline-secondary"
              data-action="click->bs-code-block#copy"
              data-bs-code-block-target="copyBtn"
              title="Copy to clipboard">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
              <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
              <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
            </svg>
            <span data-bs-code-block-target="copyText">Copy</span>
          </button>
        {% endif %}
      </div>
    {% elseif o.copyButton %}
      {# Copy button only (no header) #}
      <div class="code-block-header-minimal">
        <button
            type="button"
            class="code-block-copy btn btn-sm btn-outline-secondary"
            data-action="click->bs-code-block#copy"
            data-bs-code-block-target="copyBtn"
            title="Copy to clipboard">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
            <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
          </svg>
          <span data-bs-code-block-target="copyText">Copy</span>
        </button>
      </div>
    {% endif %}

    {# Code block #}
    <pre class="{{ o.preClasses }}"{% if o.preStyles %} style="{{ o.preStyles }}"{% endif %} data-bs-code-block-target="pre"><code class="{{ o.codeClasses }}" data-bs-code-block-target="code">{{ code_content|raw }}</code></pre>

  </div>

{%- endapply %}

