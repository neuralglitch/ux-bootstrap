{# Offcanvas with Form #}
<h3 class="mt-5">Offcanvas with Form</h3>
<twig:bs:button variant="primary" data-bs-toggle="offcanvas" data-bs-target="#offcanvasForm">
    Open Contact Form
</twig:bs:button>

<twig:bs:offcanvas id="offcanvasForm" title="Contact Us" placement="end">
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="name" placeholder="John Doe">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="name@example.com">
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" rows="3"></textarea>
        </div>
        <twig:bs:button variant="primary" type="submit">Send Message</twig:bs:button>
    </form>
</twig:bs:offcanvas>

{# Offcanvas with Rich Content #}
<h3 class="mt-5">Offcanvas with Rich Content</h3>
<twig:bs:button variant="primary" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRich">
    Open Rich Content
</twig:bs:button>

<twig:bs:offcanvas id="offcanvasRich" title="Product Details" placement="end">
    <img src="https://via.placeholder.com/300x200" class="img-fluid rounded mb-3" alt="Product">
    <h5>Premium Product</h5>
    <p class="text-muted">SKU: PRD-12345</p>
    <h4 class="text-primary">$99.99</h4>
    <p>This is a detailed description of the product. It includes all the features and benefits that make this product special.</p>
    <ul>
        <li>Feature 1: High quality materials</li>
        <li>Feature 2: Long-lasting durability</li>
        <li>Feature 3: Modern design</li>
    </ul>
    <div class="d-grid gap-2">
        <twig:bs:button variant="primary" iconStart="bi bi-cart">Add to Cart</twig:bs:button>
        <twig:bs:button variant="outline-secondary" iconStart="bi bi-heart">Add to Wishlist</twig:bs:button>
    </div>
</twig:bs:offcanvas>

