{# Progress Component Examples #}

{# Basic Progress Bar #}
<h3>Basic Progress Bar</h3>
<twig:bs:progress :value="0" class="mb-2" />
<twig:bs:progress :value="25" class="mb-2" />
<twig:bs:progress :value="50" class="mb-2" />
<twig:bs:progress :value="75" class="mb-2" />
<twig:bs:progress :value="100" />

{# Progress Bar with Labels #}
<h3 class="mt-5">Progress Bar with Labels</h3>
<twig:bs:progress :value="25" :showLabel="true" />

{# Progress Bar Heights #}
<h3 class="mt-5">Progress Bar Heights</h3>
<twig:bs:progress :value="25" height="1" class="mb-2" />
<twig:bs:progress :value="25" height="10" class="mb-2" />
<twig:bs:progress :value="25" height="20" class="mb-2" />
<twig:bs:progress :value="25" height="30" />

{# Progress Bar Variants #}
<h3 class="mt-5">Progress Bar Variants</h3>
<twig:bs:progress :value="25" variant="primary" class="mb-2" />
<twig:bs:progress :value="35" variant="success" class="mb-2" />
<twig:bs:progress :value="50" variant="info" class="mb-2" />
<twig:bs:progress :value="65" variant="warning" class="mb-2" />
<twig:bs:progress :value="80" variant="danger" />

{# Striped Progress Bars #}
<h3 class="mt-5">Striped Progress Bars</h3>
<twig:bs:progress :value="10" variant="primary" :striped="true" class="mb-2" />
<twig:bs:progress :value="25" variant="success" :striped="true" class="mb-2" />
<twig:bs:progress :value="50" variant="info" :striped="true" class="mb-2" />
<twig:bs:progress :value="75" variant="warning" :striped="true" class="mb-2" />
<twig:bs:progress :value="100" variant="danger" :striped="true" />

{# Animated Progress Bars #}
<h3 class="mt-5">Animated Progress Bars</h3>
<twig:bs:progress :value="25" variant="primary" :striped="true" :animated="true" class="mb-2" />
<twig:bs:progress :value="50" variant="success" :striped="true" :animated="true" class="mb-2" />
<twig:bs:progress :value="75" variant="warning" :striped="true" :animated="true" />

{# Multiple Bars #}
<h3 class="mt-5">Multiple Progress Bars</h3>
<div class="progress">
    <div class="progress-bar bg-primary" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="progress-bar bg-success" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="progress-bar bg-info" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
</div>

{# Stacked Progress with Labels #}
<h3 class="mt-5">Stacked Progress with Labels</h3>
<div class="progress">
    <div class="progress-bar bg-success" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40%</div>
    <div class="progress-bar bg-warning" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">30%</div>
    <div class="progress-bar bg-danger" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">20%</div>
</div>

{# Progress States #}
<h3 class="mt-5">Progress States</h3>
<p>Not Started:</p>
<twig:bs:progress :value="0" variant="secondary" class="mb-3" />

<p>In Progress:</p>
<twig:bs:progress :value="45" variant="primary" :striped="true" :animated="true" :showLabel="true" class="mb-3" />

<p>Almost Complete:</p>
<twig:bs:progress :value="90" variant="success" :showLabel="true" class="mb-3" />

<p>Complete:</p>
<twig:bs:progress :value="100" variant="success" :showLabel="true" />

{# File Upload Progress #}
<h3 class="mt-5">File Upload Progress</h3>
<div class="mb-2">
    <div class="d-flex justify-content-between mb-1">
        <span>document.pdf</span>
        <span class="text-muted">3.2 MB</span>
    </div>
    <twig:bs:progress :value="67" variant="info" :showLabel="true" />
</div>
<div class="mb-2">
    <div class="d-flex justify-content-between mb-1">
        <span>image.jpg</span>
        <span class="text-muted">1.8 MB</span>
    </div>
    <twig:bs:progress :value="100" variant="success">
        <i class="bi bi-check-lg"></i> Complete
    </twig:bs:progress>
</div>
<div>
    <div class="d-flex justify-content-between mb-1">
        <span>video.mp4</span>
        <span class="text-muted">24.5 MB</span>
    </div>
    <twig:bs:progress :value="15" variant="primary" :striped="true" :animated="true" :showLabel="true" />
</div>

{# Task Progress #}
<h3 class="mt-5">Task Progress</h3>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Project Completion</h5>
        <p class="mb-1">Planning Phase <span class="float-end">100%</span></p>
        <twig:bs:progress :value="100" variant="success" class="mb-3" />
        
        <p class="mb-1">Development <span class="float-end">75%</span></p>
        <twig:bs:progress :value="75" variant="primary" :striped="true" class="mb-3" />
        
        <p class="mb-1">Testing <span class="float-end">40%</span></p>
        <twig:bs:progress :value="40" variant="warning" :striped="true" :animated="true" class="mb-3" />
        
        <p class="mb-1">Deployment <span class="float-end">0%</span></p>
        <twig:bs:progress :value="0" variant="secondary" />
    </div>
</div>

