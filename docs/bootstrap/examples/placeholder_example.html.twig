{# Card with Placeholders #}
<h3 class="mt-5">Card with Placeholders (Loading State)</h3>
<div class="row g-3">
    <div class="col-md-6">
        <twig:bs:card>
            <div class="card-body">
                <h5 class="card-title">Loaded Content</h5>
                <p class="card-text">This card shows actual content that has finished loading.</p>
                <twig:bs:button variant="primary">Go somewhere</twig:bs:button>
            </div>
        </twig:bs:card>
    </div>
    <div class="col-md-6">
        <twig:bs:card>
            <div class="card-body">
                <h5 class="card-title placeholder-glow">
                    <twig:bs:placeholder cols="6" />
                </h5>
                <p class="card-text placeholder-glow" aria-hidden="true">
                    <twig:bs:placeholder cols="7" />
                    <twig:bs:placeholder cols="4" />
                    <twig:bs:placeholder cols="4" />
                    <twig:bs:placeholder cols="6" />
                    <twig:bs:placeholder cols="8" />
                </p>
                <a href="#" tabindex="-1" class="btn btn-primary disabled placeholder col-6"></a>
            </div>
        </twig:bs:card>
    </div>
</div>

