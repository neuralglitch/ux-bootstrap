{# Horizontal Card #}
<h3 class="mt-5">Horizontal Card</h3>
<twig:bs:card class="mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="https://via.placeholder.com/180x250" class="img-fluid rounded-start" alt="Placeholder">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Horizontal Card</h5>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in.</p>
                <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
            </div>
        </div>
    </div>
</twig:bs:card>

