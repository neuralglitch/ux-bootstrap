{# Modal Sizes #}
<h3 class="mt-5">Modal Sizes</h3>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalSmall" class="me-2">
    Small Modal
</twig:bs:button>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalLarge" class="me-2">
    Large Modal
</twig:bs:button>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalXL">
    Extra Large Modal
</twig:bs:button>

<twig:bs:modal id="modalSmall" title="Small Modal" size="sm">
    <p>This is a small modal.</p>
</twig:bs:modal>

<twig:bs:modal id="modalLarge" title="Large Modal" size="lg">
    <p>This is a large modal with more space for content.</p>
</twig:bs:modal>

<twig:bs:modal id="modalXL" title="Extra Large Modal" size="xl">
    <p>This is an extra large modal with even more space.</p>
</twig:bs:modal>

{# Fullscreen Modal #}
<h3 class="mt-5">Fullscreen Modal</h3>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalFullscreen">
    Launch Fullscreen Modal
</twig:bs:button>

<twig:bs:modal id="modalFullscreen" title="Fullscreen Modal" :fullscreen="true">
    <p>This modal takes up the entire viewport.</p>
</twig:bs:modal>

{# Static Backdrop Modal #}
<h3 class="mt-5">Static Backdrop Modal</h3>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalStatic">
    Launch Static Modal
</twig:bs:button>

<twig:bs:modal id="modalStatic" title="Static Backdrop" :staticBackdrop="true">
    <p>This modal won't close when clicking outside of it. Try it!</p>
</twig:bs:modal>

{# Modal without Animation #}
<h3 class="mt-5">Modal without Animation</h3>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalNoFade">
    Launch No-Fade Modal
</twig:bs:button>

<twig:bs:modal id="modalNoFade" title="No Animation" :fade="false">
    <p>This modal appears instantly without fade animation.</p>
</twig:bs:modal>

{# Form Modal #}
<h3 class="mt-5">Form Modal</h3>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalForm">
    Open Form Modal
</twig:bs:button>

<twig:bs:modal id="modalForm" title="Contact Form">
    {% block content %}
        <form>
            <div class="mb-3">
                <label for="recipientName" class="form-label">Recipient Name</label>
                <input type="text" class="form-control" id="recipientName">
            </div>
            <div class="mb-3">
                <label for="messageText" class="form-label">Message</label>
                <textarea class="form-control" id="messageText" rows="3"></textarea>
            </div>
        </form>
    {% endblock %}
    {% block footer %}
        <twig:bs:button variant="secondary" data-bs-dismiss="modal">Cancel</twig:bs:button>
        <twig:bs:button variant="primary">Send Message</twig:bs:button>
    {% endblock %}
</twig:bs:modal>

