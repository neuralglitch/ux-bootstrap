{# Modal Component Examples #}

{# Basic Modal #}
<h3>Basic Modal</h3>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalBasic">
    Launch Basic Modal
</twig:bs:button>

<twig:bs:modal id="modalBasic" title="Modal Title">
    <p>Modal body text goes here.</p>
</twig:bs:modal>

{# Modal with Footer #}
<h3 class="mt-5">Modal with Footer</h3>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalFooter">
    Launch Modal with Footer
</twig:bs:button>

<twig:bs:modal id="modalFooter" title="Modal with Footer">
    {% block content %}
        <p>This modal has a custom footer with action buttons.</p>
    {% endblock %}
    {% block footer %}
        <twig:bs:button variant="secondary" data-bs-dismiss="modal">Close</twig:bs:button>
        <twig:bs:button variant="primary">Save Changes</twig:bs:button>
    {% endblock %}
</twig:bs:modal>

{# Vertically Centered Modal #}
<h3 class="mt-5">Vertically Centered Modal</h3>
<twig:bs:button variant="primary" data-bs-toggle="modal" data-bs-target="#modalCentered">
    Launch Centered Modal
</twig:bs:button>

<twig:bs:modal id="modalCentered" title="Centered Modal" :centered="true">
    <p>This modal is vertically centered.</p>
</twig:bs:modal>

{# Scrollable Modal #}
