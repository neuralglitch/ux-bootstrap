{# Testimonial Component Examples #}

{# 1. Single Testimonial (Default) #}
<twig:bs:testimonial 
  quote="This product has completely transformed how we do business. The ROI was apparent within the first month!"
  author="Sarah Johnson"
  role="CEO"
  company="TechStart Inc."
  avatarSrc="/images/testimonials/sarah.jpg"
  :rating="5" />

{# 2. Featured Testimonial #}
<twig:bs:testimonial 
  variant="featured"
  quote="Outstanding service from start to finish. The team went above and beyond our expectations."
  author="Michael Chen"
  role="Product Manager"
  company="InnovateCo"
  avatarSrc="/images/testimonials/michael.jpg"
  :rating="5" />

{# 3. Minimal Variant #}
<twig:bs:testimonial 
  variant="minimal"
  quote="Simple, elegant, and exactly what we needed."
  author="Emily Rodriguez"
  role="Designer"
  company="Creative Studio"
  :rating="5" />

{# 4. Centered Alignment #}
<twig:bs:testimonial 
  quote="Five stars all around! Highly recommend to anyone."
  author="David Lee"
  alignment="center"
  avatarSrc="/images/testimonials/david.jpg"
  :rating="5" />

