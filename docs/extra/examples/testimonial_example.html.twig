  {% block content %}
    <div class="col">
      <div class="card mb-3 border-0 shadow-sm">
        <div class="card-body">
          <p class="fst-italic">"Amazing product!"</p>
          <small>- Customer A</small>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card mb-3 border-0 shadow-sm">
        <div class="card-body">
          <p class="fst-italic">"Highly recommended!"</p>
          <small>- Customer B</small>
        </div>
      </div>
    </div>
    <div class="col">
