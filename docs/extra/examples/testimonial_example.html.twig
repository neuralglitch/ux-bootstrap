</twig:bs:testimonial>

{# 7. Full-Width Container #}
<twig:bs:testimonial 
  container="container-fluid"
  variant="featured"
  quote="This is the best investment we've made for our team this year."
  author="Robert Taylor"
  role="VP of Engineering"
  company="Global Tech Solutions"
  :rating="5" />

{# 8. Custom Content with Bootstrap Quote Icon #}
<twig:bs:testimonial variant="single">
  {% block content %}
    <div class="card border-0 shadow-lg">
      <div class="card-body p-5 text-center">
        <div class="mb-4">
          <i class="bi bi-quote display-3 text-primary"></i>
        </div>
        <blockquote class="mb-4">
          <p class="fs-3">Custom testimonial layout with your own HTML structure and styling.</p>
        </blockquote>
        <div class="text-warning mb-3">
          <i class="bi bi-star-fill"></i>
          <i class="bi bi-star-fill"></i>
          <i class="bi bi-star-fill"></i>
          <i class="bi bi-star-fill"></i>
          <i class="bi bi-star-fill"></i>
        </div>
        <div class="d-flex justify-content-center align-items-center gap-3">
          <img src="/images/testimonials/custom.jpg" class="rounded-circle" width="80" height="80" alt="Custom Name">
          <div class="text-start">
            <div class="fw-bold fs-5">Custom Name</div>
            <div class="text-muted">Custom Title, Custom Company</div>
          </div>
        </div>
      </div>
    </div>
  {% endblock %}
</twig:bs:testimonial>

