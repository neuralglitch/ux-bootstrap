{# Stat Component Examples #}

{# Basic Stats #}
<h3>Basic Stats</h3>
<div class="row g-3">
    <div class="col-md-3">
        <twig:bs:stat 
            label="Total Users"
            value="1,234"
            variant="primary"
        />
    </div>
    <div class="col-md-3">
        <twig:bs:stat 
            label="Revenue"
            value="$45,678"
            variant="success"
        />
    </div>
    <div class="col-md-3">
        <twig:bs:stat 
            label="Orders"
            value="789"
            variant="info"
        />
    </div>
    <div class="col-md-3">
        <twig:bs:stat 
            label="Pending"
            value="23"
            variant="warning"
        />
    </div>
</div>

{# Stats with Trends #}
<h3 class="mt-5">Stats with Trends</h3>
<div class="row g-3">
    <div class="col-md-4">
        <twig:bs:stat 
            label="Active Users"
            value="2,456"
            trend="up"
            trendValue="12.5%"
            variant="success"
        />
    </div>
    <div class="col-md-4">
        <twig:bs:stat 
            label="Page Views"
            value="145K"
            trend="up"
            trendValue="8.3%"
            variant="info"
        />
    </div>
    <div class="col-md-4">
        <twig:bs:stat 
            label="Bounce Rate"
            value="42%"
            trend="down"
            trendValue="3.2%"
            variant="danger"
        />
    </div>
</div>

{# Stats with Icons #}
<h3 class="mt-5">Stats with Icons</h3>
<div class="row g-3">
    <div class="col-md-3">
        <twig:bs:stat 
