        <twig:bs:stat 
            icon="bi bi-cart-fill"
            label="Total Orders"
            value="3,567"
            trend="up"
            trendValue="23%"
            variant="success"
        />
    </div>
    <div class="col-md-3">
        <twig:bs:stat 
            icon="bi bi-currency-dollar"
