{# Fixed Sidebar Layout #}
<h3 class="mt-5">Fixed Sidebar Layout Example</h3>
<div class="d-flex" style="height: 400px;">
    <div class="bg-light border-end" style="width: 250px;">
        <twig:bs:sidebar title="App Menu" class="h-100">
            <nav class="nav flex-column">
                <a class="nav-link active" href="#">
                    <i class="bi bi-house-fill me-2"></i>Home
                </a>
                <a class="nav-link" href="#">
                    <i class="bi bi-grid me-2"></i>Projects
                </a>
                <a class="nav-link" href="#">
                    <i class="bi bi-kanban me-2"></i>Tasks
                </a>
                <a class="nav-link" href="#">
                    <i class="bi bi-calendar3 me-2"></i>Calendar
                </a>
                <a class="nav-link" href="#">
                    <i class="bi bi-chat-dots me-2"></i>Messages
                </a>
                <hr>
                <a class="nav-link" href="#">
                    <i class="bi bi-gear me-2"></i>Settings
                </a>
                <a class="nav-link" href="#">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a>
            </nav>
        </twig:bs:sidebar>
    </div>
    <div class="flex-grow-1 p-4">
        <h4>Main Content Area</h4>
        <p>This is the main content area. The sidebar is fixed on the left.</p>
    </div>
</div>

{# Sidebar with Badge Indicators #}
<h3 class="mt-5">Sidebar with Notifications</h3>
<twig:bs:sidebar title="Menu">
    <nav class="nav flex-column">
        <a class="nav-link active d-flex justify-content-between align-items-center" href="#">
            <span><i class="bi bi-house-fill me-2"></i>Dashboard</span>
        </a>
        <a class="nav-link d-flex justify-content-between align-items-center" href="#">
            <span><i class="bi bi-envelope me-2"></i>Messages</span>
            <twig:bs:badge variant="danger" :pill="true">5</twig:bs:badge>
        </a>
        <a class="nav-link d-flex justify-content-between align-items-center" href="#">
            <span><i class="bi bi-bell me-2"></i>Notifications</span>
            <twig:bs:badge variant="primary" :pill="true">12</twig:bs:badge>
        </a>
        <a class="nav-link d-flex justify-content-between align-items-center" href="#">
            <span><i class="bi bi-cart me-2"></i>Cart</span>
            <twig:bs:badge variant="success" :pill="true">3</twig:bs:badge>
        </a>
        <a class="nav-link" href="#">
            <i class="bi bi-gear me-2"></i>Settings
        </a>
    </nav>
</twig:bs:sidebar>

