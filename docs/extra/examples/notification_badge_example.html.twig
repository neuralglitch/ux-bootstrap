{#
  NotificationBadge Component Examples
  
  This file demonstrates all variations and use cases of the NotificationBadge component.
  Copy and adapt these examples for your needs.
#}

{% extends 'base.html.twig' %}

{% block title %}NotificationBadge Component Examples{% endblock %}

{% block body %}
<div class="container py-5">
  <h1 class="mb-5">NotificationBadge Component Examples</h1>

  {# Basic Usage #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Basic Usage</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-primary position-relative">
        Messages
        <twig:bs:notification-badge content="5" />
      </button>

      <button class="btn btn-primary position-relative">
        Notifications
        <twig:bs:notification-badge :dot="true" />
      </button>

      <button class="btn btn-primary position-relative">
        Inbox
        <twig:bs:notification-badge content="3" :pulse="true" />
      </button>
    </div>
  </section>

  {# Variants #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Color Variants</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-light position-relative">
        Primary
        <twig:bs:notification-badge variant="primary" content="1" />
      </button>

      <button class="btn btn-light position-relative">
        Secondary
        <twig:bs:notification-badge variant="secondary" content="2" />
      </button>

      <button class="btn btn-light position-relative">
        Success
        <twig:bs:notification-badge variant="success" content="3" />
      </button>

      <button class="btn btn-light position-relative">
        Danger
        <twig:bs:notification-badge variant="danger" content="4" />
      </button>

      <button class="btn btn-light position-relative">
        Warning
        <twig:bs:notification-badge variant="warning" content="5" />
      </button>

      <button class="btn btn-light position-relative">
        Info
        <twig:bs:notification-badge variant="info" content="6" />
      </button>

      <button class="btn btn-light position-relative">
        Light
        <twig:bs:notification-badge variant="light" content="7" />
      </button>

      <button class="btn btn-light position-relative">
        Dark
        <twig:bs:notification-badge variant="dark" content="8" />
      </button>
    </div>
  </section>

  {# Positions #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Position Variants</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-primary position-relative" style="padding: 2rem;">
        Top Start
        <twig:bs:notification-badge position="top-start" content="1" />
      </button>

      <button class="btn btn-primary position-relative" style="padding: 2rem;">
        Top End
        <twig:bs:notification-badge position="top-end" content="2" />
      </button>

      <button class="btn btn-primary position-relative" style="padding: 2rem;">
        Bottom Start
        <twig:bs:notification-badge position="bottom-start" content="3" />
      </button>

      <button class="btn btn-primary position-relative" style="padding: 2rem;">
        Bottom End
        <twig:bs:notification-badge position="bottom-end" content="4" />
      </button>
    </div>
  </section>

  {# Sizes #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Sizes</h2>
    <div class="d-flex gap-3 flex-wrap align-items-center">
      <button class="btn btn-primary position-relative">
        Small
        <twig:bs:notification-badge size="sm" content="5" />
      </button>

      <button class="btn btn-primary position-relative">
        Medium
        <twig:bs:notification-badge size="md" content="10" />
      </button>

      <button class="btn btn-primary position-relative">
        Large
        <twig:bs:notification-badge size="lg" content="99" />
      </button>
    </div>
  </section>

  {# Dot Style #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Dot Style (No Content)</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-outline-primary position-relative">
        Notifications
        <twig:bs:notification-badge :dot="true" />
      </button>

      <button class="btn btn-outline-success position-relative">
        Updates
        <twig:bs:notification-badge :dot="true" variant="success" />
      </button>

      <button class="btn btn-outline-warning position-relative">
        Alerts
        <twig:bs:notification-badge :dot="true" variant="warning" :pulse="true" />
      </button>
    </div>
  </section>

  {# Pulse Animation #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Pulse Animation</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-primary position-relative">
        New Messages
        <twig:bs:notification-badge content="3" :pulse="true" />
      </button>

      <button class="btn btn-primary position-relative">
        New Notifications
        <twig:bs:notification-badge :dot="true" :pulse="true" variant="danger" />
      </button>

      <button class="btn btn-primary position-relative">
        System Alert
        <twig:bs:notification-badge :dot="true" :pulse="true" variant="warning" />
      </button>
    </div>
  </section>

  {# Max Number Display #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Max Number Display</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-primary position-relative">
        Under Max
        <twig:bs:notification-badge content="50" :max="99" />
      </button>

      <button class="btn btn-primary position-relative">
        Over Max (shows 99+)
        <twig:bs:notification-badge content="150" :max="99" />
      </button>

      <button class="btn btn-primary position-relative">
        Text Content (ignores max)
        <twig:bs:notification-badge content="New" :max="99" />
      </button>
    </div>
  </section>

  {# Avatars with Status #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Avatar Status Indicators</h2>
    <div class="d-flex gap-3 flex-wrap">
      {# Online #}
      <div class="position-relative d-inline-block">
        <img src="https://i.pravatar.cc/80?img=1" class="rounded-circle" alt="User" width="60" height="60">
        <twig:bs:notification-badge 
          :dot="true" 
          variant="success" 
          position="bottom-end" 
        />
      </div>

      {# Away #}
      <div class="position-relative d-inline-block">
        <img src="https://i.pravatar.cc/80?img=2" class="rounded-circle" alt="User" width="60" height="60">
        <twig:bs:notification-badge 
          :dot="true" 
          variant="warning" 
          position="bottom-end" 
        />
      </div>

      {# Busy #}
      <div class="position-relative d-inline-block">
        <img src="https://i.pravatar.cc/80?img=3" class="rounded-circle" alt="User" width="60" height="60">
        <twig:bs:notification-badge 
          :dot="true" 
          variant="danger" 
          position="bottom-end" 
        />
      </div>

      {# Offline #}
      <div class="position-relative d-inline-block">
        <img src="https://i.pravatar.cc/80?img=4" class="rounded-circle" alt="User" width="60" height="60">
        <twig:bs:notification-badge 
          :dot="true" 
          variant="secondary" 
          position="bottom-end" 
        />
      </div>
    </div>
  </section>

  {# Navbar Example #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Navbar Integration</h2>
    <nav class="navbar navbar-expand-lg navbar-light bg-light rounded">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Brand</a>
        
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link position-relative" href="#notifications">
              <svg width="20" height="20" fill="currentColor" class="bi bi-bell" viewBox="0 0 16 16">
                <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2M8 1.918l-.797.161A4 4 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4 4 0 0 0-3.203-3.92zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5 5 0 0 1 13 6c0 .88.32 4.2 1.22 6"/>
              </svg>
              <twig:bs:notification-badge content="5" :pulse="true" />
            </a>
          </li>
          
          <li class="nav-item">
            <a class="nav-link position-relative" href="#messages">
              <svg width="20" height="20" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
              </svg>
              <twig:bs:notification-badge content="2" />
            </a>
          </li>
          
          <li class="nav-item">
            <a class="nav-link position-relative" href="#profile">
              <img src="https://i.pravatar.cc/40" class="rounded-circle" alt="User" width="30" height="30">
              <twig:bs:notification-badge 
                :dot="true" 
                variant="success" 
                position="bottom-end"
                size="sm"
              />
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </section>

  {# Shopping Cart #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Shopping Cart Badge</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-outline-primary position-relative">
        <svg width="20" height="20" fill="currentColor" class="bi bi-cart me-2" viewBox="0 0 16 16">
          <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
        </svg>
        Cart
        <twig:bs:notification-badge 
          content="3" 
          variant="primary"
          :bordered="false"
        />
      </button>

      <button class="btn btn-primary position-relative">
        <svg width="20" height="20" fill="currentColor" class="bi bi-cart me-2" viewBox="0 0 16 16">
          <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
        </svg>
        View Cart
        <twig:bs:notification-badge content="7" />
      </button>
    </div>
  </section>

  {# Border Options #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Border Options</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-dark position-relative">
        With Border
        <twig:bs:notification-badge content="5" :bordered="true" />
      </button>

      <button class="btn btn-dark position-relative">
        No Border
        <twig:bs:notification-badge content="5" :bordered="false" />
      </button>

      <button class="btn btn-light position-relative">
        Light Button (border helps visibility)
        <twig:bs:notification-badge content="5" :bordered="true" />
      </button>
    </div>
  </section>

  {# Pill vs Square #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Pill vs Square</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-primary position-relative">
        Pill (default)
        <twig:bs:notification-badge content="12" :pill="true" />
      </button>

      <button class="btn btn-primary position-relative">
        Square
        <twig:bs:notification-badge content="12" :pill="false" />
      </button>

      <button class="btn btn-primary position-relative">
        Pill Dot
        <twig:bs:notification-badge :dot="true" :pill="true" />
      </button>

      <button class="btn btn-primary position-relative">
        Square Dot
        <twig:bs:notification-badge :dot="true" :pill="false" />
      </button>
    </div>
  </section>

  {# Inline Usage #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Inline Usage</h2>
    <p>
      You have 
      <twig:bs:notification-badge content="5" :inline="true" size="sm" /> 
      unread messages and 
      <twig:bs:notification-badge content="3" :inline="true" size="sm" variant="warning" /> 
      pending notifications.
    </p>
  </section>

  {# Custom Content #}
  <section class="mb-5">
    <h2 class="h3 mb-3">Custom Content via Block</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-primary position-relative">
        Updates
        <twig:bs:notification-badge>
          {% block content %}New{% endblock %}
        </twig:bs:notification-badge>
      </button>

      <button class="btn btn-success position-relative">
        Features
        <twig:bs:notification-badge variant="success">
          {% block content %}
            <svg width="12" height="12" fill="currentColor" viewBox="0 0 16 16">
              <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425z"/>
            </svg>
          {% endblock %}
        </twig:bs:notification-badge>
      </button>
    </div>
  </section>

  {# Icon Badges #}
  <section class="mb-5">
    <h2 class="h3 mb-3">On Icon Buttons</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-outline-secondary position-relative rounded-circle p-2" style="width: 50px; height: 50px;">
        <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
          <path d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2M8 1.918l-.797.161A4 4 0 0 0 4 6c0 .628-.134 2.197-.459 3.742-.16.767-.376 1.566-.663 2.258h10.244c-.287-.692-.502-1.49-.663-2.258C12.134 8.197 12 6.628 12 6a4 4 0 0 0-3.203-3.92zM14.22 12c.223.447.481.801.78 1H1c.299-.199.557-.553.78-1C2.68 10.2 3 6.88 3 6c0-2.42 1.72-4.44 4.005-4.901a1 1 0 1 1 1.99 0A5 5 0 0 1 13 6c0 .88.32 4.2 1.22 6"/>
        </svg>
        <twig:bs:notification-badge content="9" :pulse="true" />
      </button>

      <button class="btn btn-outline-secondary position-relative rounded-circle p-2" style="width: 50px; height: 50px;">
        <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
          <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
        </svg>
        <twig:bs:notification-badge content="2" />
      </button>

      <button class="btn btn-outline-secondary position-relative rounded-circle p-2" style="width: 50px; height: 50px;">
        <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
          <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
        </svg>
        <twig:bs:notification-badge content="5" variant="primary" />
      </button>
    </div>
  </section>

  {# List Group Items #}
  <section class="mb-5">
    <h2 class="h3 mb-3">In List Group</h2>
    <ul class="list-group" style="max-width: 400px;">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Inbox
        <twig:bs:notification-badge content="14" :inline="true" />
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Sent
        <twig:bs:notification-badge content="2" :inline="true" variant="secondary" />
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Drafts
        <twig:bs:notification-badge content="5" :inline="true" variant="warning" />
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        Spam
        <twig:bs:notification-badge content="99" :inline="true" :max="99" variant="danger" />
      </li>
    </ul>
  </section>

  {# Custom Classes and Attributes #}
  <section class="mb-5">
    <h2 class="h3 mb-3">With Custom Classes and Attributes</h2>
    <div class="d-flex gap-3 flex-wrap">
      <button class="btn btn-primary position-relative">
        Custom Class
        <twig:bs:notification-badge 
          content="5" 
          class="shadow-lg"
        />
      </button>

      <button class="btn btn-primary position-relative">
        Custom Attributes
        <twig:bs:notification-badge 
          content="3" 
          :attr="{'data-count': '3', 'title': '3 notifications'}"
        />
      </button>
    </div>
  </section>
</div>
{% endblock %}

