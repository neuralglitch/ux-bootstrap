        }
    ]"
    class="mb-5"
/>

{# Example 6: Controller Usage #}
{# In your controller:

use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;

class SupportController extends AbstractController
{
    public function faq(): Response
    {
        $faqItems = [
            [
                'question' => 'How do I upgrade my plan?',
                'answer' => '<p>Go to your account settings and click on "Upgrade Plan".</p>',
            ],
            [
                'question' => 'What happens after my trial ends?',
                'answer' => '<p>Your account will be downgraded to the free tier unless you upgrade.</p>',
            ],
        ];

        return $this->render('support/faq.html.twig', [
            'faqItems' => $faqItems,
        ]);
    }
}
#}

{# Then in your template: #}
<twig:bs:faq
    variant="accordion"
    title="Support FAQ"
    :items="faqItems"
    :flush="true"
/>

{# Example 7: Custom Content (Advanced) #}
<twig:bs:faq variant="accordion" :flush="true">
    {% block content %}
        <div class="accordion" id="customFaq">
            <div class="accordion-item">
                <h3 class="accordion-header">
                    <button class="accordion-button" type="button" 
                        data-bs-toggle="collapse" data-bs-target="#custom1">
                        How do I customize the FAQ?
                    </button>
                </h3>
                <div id="custom1" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        You can provide custom content using the content block for full control over the markup.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h3 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" 
                        data-bs-toggle="collapse" data-bs-target="#custom2">
                        Can I add images?
                    </button>
                </h3>
                <div id="custom2" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <p>Yes! You can include any HTML in the answer:</p>
                        <img src="/path/to/image.jpg" class="img-fluid" alt="Example">
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
</twig:bs:faq>

