{# Pricing Card Component Examples #}

{# Basic Pricing Cards #}
<h3>Basic Pricing Cards</h3>
<div class="row g-4">
    <div class="col-md-4">
        <twig:bs:pricing-card
            title="Basic"
            price="$9"
            period="month"
            :features="[
                'Up to 10 users',
                '5GB storage',
                'Email support',
                'Basic analytics'
            ]"
            buttonLabel="Get Started"
            buttonHref="/signup/basic"
        />
    </div>
    <div class="col-md-4">
        <twig:bs:pricing-card
            title="Pro"
            price="$29"
            period="month"
            :featured="true"
            :features="[
                'Up to 100 users',
                '50GB storage',
                'Priority support',
                'Advanced analytics',
                'Custom integrations'
            ]"
            buttonLabel="Start Free Trial"
            buttonHref="/signup/pro"
            buttonVariant="primary"
        />
    </div>
    <div class="col-md-4">
        <twig:bs:pricing-card
            title="Enterprise"
            price="$99"
            period="month"
            :features="[
                'Unlimited users',
                'Unlimited storage',
                '24/7 phone support',
                'Enterprise analytics',
                'Custom integrations',
                'Dedicated account manager'
            ]"
            buttonLabel="Contact Sales"
            buttonHref="/contact"
        />
    </div>
</div>

