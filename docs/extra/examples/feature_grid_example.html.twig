{# Example 5: Custom Content (Advanced) #}
<twig:bs:feature-grid heading="Flexible Customization">
  {% block content %}
    <div class="col-md-4">
      <div class="feature-item text-center">
        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle p-3 d-inline-flex align-items-center justify-content-center mb-3" style="width: 4rem; height: 4rem;">
          <i class="bi bi-star-fill" style="font-size: 2rem;"></i>
        </div>
        <h3 class="h5 fw-bold mb-2">Custom Feature 1</h3>
        <p class="text-muted mb-3">Create your own custom HTML structure with complete control</p>
        <a href="/custom" class="btn btn-outline-primary btn-sm">Explore</a>
      </div>
    </div>
    <div class="col-md-4">
      <div class="feature-item text-center">
        <div class="feature-icon bg-success bg-gradient text-white rounded-circle p-3 d-inline-flex align-items-center justify-content-center mb-3" style="width: 4rem; height: 4rem;">
          <i class="bi bi-heart-fill" style="font-size: 2rem;"></i>
        </div>
        <h3 class="h5 fw-bold mb-2">Custom Feature 2</h3>
        <p class="text-muted mb-3">Add buttons, badges, or any other content you need</p>
        <a href="/custom-2" class="btn btn-outline-success btn-sm">View More</a>
      </div>
    </div>
    <div class="col-md-4">
      <div class="feature-item text-center">
        <div class="feature-icon bg-info bg-gradient text-white rounded-circle p-3 d-inline-flex align-items-center justify-content-center mb-3" style="width: 4rem; height: 4rem;">
          <i class="bi bi-lightning-fill" style="font-size: 2rem;"></i>
        </div>
        <h3 class="h5 fw-bold mb-2">Custom Feature 3</h3>
        <p class="text-muted mb-3">Mix and match with Bootstrap components</p>
        <a href="/custom-3" class="btn btn-outline-info btn-sm">Discover</a>
      </div>
    </div>
  {% endblock %}
</twig:bs:feature-grid>

