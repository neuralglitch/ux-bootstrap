{# CTA Component Examples #}
{# This file demonstrates various usage patterns of the bs:cta component #}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CTA Component Examples</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container my-5">
    <h1 class="mb-5">CTA Component Examples</h1>

    {# Example 1: Default Centered CTA #}
    <div class="mb-5">
        <h2 class="h4 mb-3">1. Default Centered CTA</h2>
        <twig:bs:cta
            title="Ready to get started?"
            description="Join thousands of satisfied customers today"
            ctaLabel="Sign Up Now"
            ctaHref="/register"
            secondaryCtaLabel="Learn More"
            secondaryCtaHref="/about"
        />
    </div>

    {# Example 2: Split Layout #}
    <div class="mb-5">
        <h2 class="h4 mb-3">2. Split Layout</h2>
        <twig:bs:cta
            variant="split"
            title="Ready to transform your business?"
            description="Join over 10,000 companies already using our platform"
            ctaLabel="Get Started"
            ctaHref="/signup"
            secondaryCtaLabel="Contact Sales"
            secondaryCtaHref="/contact"
        />
    </div>

    {# Example 3: With Icon #}
    <div class="mb-5">
        <h2 class="h4 mb-3">3. With Icon</h2>
        <twig:bs:cta
            icon="ðŸš€"
            title="Launch Your Project Today"
            description="Get started in minutes with our easy-to-use platform"
            ctaLabel="Start Free Trial"
            ctaHref="/trial"
            secondaryCtaLabel="View Demo"
            secondaryCtaHref="/demo"
        />
    </div>

    {# Example 4: Bordered Variant #}
    <div class="mb-5">
        <h2 class="h4 mb-3">4. Bordered with Shadow</h2>
        <twig:bs:cta
            variant="bordered"
            border="true"
            shadow="true"
            rounded="true"
            title="Limited Time Offer"
            description="Get 50% off annual plans"
            ctaLabel="Upgrade Now"
            ctaHref="/upgrade"
            ctaVariant="success"
        />
    </div>

    {# Example 5: Background Variant with Primary Color #}
    <div class="mb-5">
        <h2 class="h4 mb-3">5. Background Variant (Primary)</h2>
        <twig:bs:cta
            variant="background"
            bg="primary"
            textColor="white"
            title="Transform Your Workflow"
            description="Streamline your processes and boost productivity"
            ctaLabel="Start Now"
            ctaHref="/start"
            ctaVariant="light"
            secondaryCtaLabel="View Features"
            secondaryCtaHref="/features"
            secondaryCtaVariant="outline-light"
        />
    </div>

    {# Example 6: Dark Theme CTA #}
    <div class="mb-5">
        <h2 class="h4 mb-3">6. Dark Theme</h2>
        <twig:bs:cta
            variant="background"
            bg="dark"
            textColor="white"
            icon="â­"
            title="Premium Features Await"
            description="Unlock advanced capabilities and priority support"
            ctaLabel="Go Premium"
            ctaHref="/premium"
            ctaVariant="warning"
            secondaryCtaLabel="Compare Plans"
            secondaryCtaHref="/plans"
            secondaryCtaVariant="outline-light"
        />
    </div>

    {# Example 7: Minimal Variant #}
    <div class="mb-5">
        <h2 class="h4 mb-3">7. Minimal Variant</h2>
        <twig:bs:cta
            variant="minimal"
            title="Want to learn more?"
            ctaLabel="Read Documentation"
            ctaHref="/docs"
            padding="py-3"
        />
    </div>

    {# Example 8: Newsletter Signup #}
    <div class="mb-5">
        <h2 class="h4 mb-3">8. Newsletter Signup</h2>
        <twig:bs:cta
            variant="background"
            bg="body-tertiary"
            title="Stay in the loop"
            description="Subscribe to our newsletter for updates and tips"
            ctaLabel="Subscribe"
            ctaHref="/subscribe"
            alignment="center"
        />
    </div>

    {# Example 9: Left Aligned Split #}
    <div class="mb-5">
        <h2 class="h4 mb-3">9. Left Aligned Split</h2>
        <twig:bs:cta
            variant="split"
            alignment="start"
            title="Developer Tools"
            description="Comprehensive API documentation and SDKs"
            ctaLabel="View API Docs"
            ctaHref="/api"
            secondaryCtaLabel="Download SDK"
            secondaryCtaHref="/sdk"
        />
    </div>

    {# Example 10: Custom Content Slot #}
    <div class="mb-5">
        <h2 class="h4 mb-3">10. Custom Content Slot</h2>
        <twig:bs:cta variant="centered" bg="primary" textColor="white" padding="py-5">
            <div class="text-center">
                <h1 class="display-4 fw-bold mb-3">ðŸŽ‰ Black Friday Sale!</h1>
                <p class="lead mb-4">Up to 70% off on all plans</p>
                <div class="d-flex gap-2 justify-content-center">
                    <a href="/sale" class="btn btn-light btn-lg">Shop Now</a>
                    <a href="/details" class="btn btn-outline-light btn-lg">Learn More</a>
                </div>
                <small class="d-block mt-3">Offer ends in 48 hours</small>
            </div>
        </twig:bs:cta>
    </div>

    {# Example 11: Enterprise CTA #}
    <div class="mb-5">
        <h2 class="h4 mb-3">11. Enterprise Sales</h2>
        <twig:bs:cta
            variant="split"
            bg="light"
            border="true"
            shadow="true"
            title="Enterprise Solutions"
            description="Scale your business with our enterprise-grade platform"
            ctaLabel="Contact Sales"
            ctaHref="/sales"
            ctaVariant="primary"
            ctaSize="lg"
            secondaryCtaLabel="View Pricing"
            secondaryCtaHref="/pricing"
        />
    </div>

    {# Example 12: Support CTA (Minimal) #}
    <div class="mb-5">
        <h2 class="h4 mb-3">12. Footer Support CTA</h2>
        <twig:bs:cta
            variant="minimal"
            title="Questions? We're here to help"
            ctaLabel="Contact Support"
            ctaHref="/support"
            ctaSize="md"
            alignment="center"
            padding="py-3"
        />
    </div>

    {# Example 13: Trial Signup with Success Variant #}
    <div class="mb-5">
        <h2 class="h4 mb-3">13. Trial Signup</h2>
        <twig:bs:cta
            variant="centered"
            bg="success"
            textColor="white"
            icon="âœ¨"
            title="Start Your Free Trial"
            description="No credit card required. Cancel anytime."
            ctaLabel="Get Started Free"
            ctaHref="/trial"
            ctaVariant="light"
            ctaSize="lg"
        />
    </div>

    {# Example 14: Warning/Alert CTA #}
    <div class="mb-5">
        <h2 class="h4 mb-3">14. Important Notice</h2>
        <twig:bs:cta
            variant="bordered"
            border="true"
            bg="warning-subtle"
            icon="âš ï¸"
            title="Action Required"
            description="Your subscription expires in 3 days"
            ctaLabel="Renew Now"
            ctaHref="/renew"
            ctaVariant="warning"
        />
    </div>

    {# Example 15: Info/Educational CTA #}
    <div class="mb-5">
        <h2 class="h4 mb-3">15. Educational CTA</h2>
        <twig:bs:cta
            variant="background"
            bg="info-subtle"
            icon="ðŸ“š"
            title="New to the platform?"
            description="Check out our comprehensive getting started guide"
            ctaLabel="View Guide"
            ctaHref="/guide"
            ctaVariant="info"
            secondaryCtaLabel="Watch Tutorial"
            secondaryCtaHref="/tutorial"
            secondaryCtaVariant="outline-info"
        />
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

