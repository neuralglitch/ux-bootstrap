{# Tour Progress Indicator #}
<h3 class="mt-5">Tour Progress Indicator</h3>
<twig:bs:card>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="mb-0">Getting Started Tour</h6>
            <small class="text-muted">3 of 7 completed</small>
        </div>
        <twig:bs:progress :value="43" variant="success" :showLabel="true" />
        <div class="mt-3 d-flex gap-2">
            <twig:bs:button variant="primary" size="sm">Continue Tour</twig:bs:button>
            <twig:bs:button variant="outline-secondary" size="sm">Restart</twig:bs:button>
        </div>
    </div>
</twig:bs:card>

{# Tour Completion #}
<h3 class="mt-5">Tour Completion Screen</h3>
<twig:bs:card class="text-center">
    <div class="card-body py-5">
        <i class="bi bi-check-circle-fill text-success display-1 mb-3"></i>
        <h4>Tour Complete!</h4>
        <p class="text-muted">You've completed the product tour. You're ready to get started!</p>
        <div class="d-flex gap-2 justify-content-center mt-4">
            <twig:bs:button variant="success">Get Started</twig:bs:button>
            <twig:bs:button variant="outline-secondary">Retake Tour</twig:bs:button>
        </div>
    </div>
</twig:bs:card>

