{# Example 1: Simple Gallery #}
<h2>Simple Gallery</h2>
<twig:bs:lightbox :images="[
    {'src': '/images/portfolio/photo1.jpg', 'alt': 'Photo 1', 'caption': 'Beautiful landscape'},
    {'src': '/images/portfolio/photo2.jpg', 'alt': 'Photo 2', 'caption': 'City skyline'},
    {'src': '/images/portfolio/photo3.jpg', 'alt': 'Photo 3', 'caption': 'Ocean sunset'}
]" />

{# Example 2: Gallery with Thumbnails #}
<h2>Gallery with Thumbnails</h2>
<twig:bs:lightbox
    :images="[
        {
            'src': '/images/full/photo1.jpg',
            'thumbnail': '/images/thumb/photo1.jpg',
            'alt': 'Photo 1',
            'caption': 'Beautiful landscape'
        },
        {
            'src': '/images/full/photo2.jpg',
            'thumbnail': '/images/thumb/photo2.jpg',
            'alt': 'Photo 2',
            'caption': 'City skyline'
        },
        {
            'src': '/images/full/photo3.jpg',
            'thumbnail': '/images/thumb/photo3.jpg',
            'alt': 'Photo 3',
            'caption': 'Ocean sunset'
        }
    ]"
    :showThumbnails="true"
/>

{# Example 3: Product Gallery #}
<h2>Product Gallery</h2>
<twig:bs:lightbox
    :images="[
        {'src': '/images/products/product-front.jpg', 'alt': 'Product Front View'},
        {'src': '/images/products/product-back.jpg', 'alt': 'Product Back View'},
        {'src': '/images/products/product-detail.jpg', 'alt': 'Product Detail'},
        {'src': '/images/products/product-lifestyle.jpg', 'alt': 'Product Lifestyle'}
    ]"
    :showCounter="true"
    :showCaptions="false"
    transition="slide"
/>

{# Example 4: Photo Album with Autoplay #}
<h2>Photo Album with Autoplay</h2>
<twig:bs:lightbox
    :images="[
        {'src': '/images/album/photo1.jpg', 'alt': 'Album Photo 1', 'caption': 'Vacation Day 1'},
        {'src': '/images/album/photo2.jpg', 'alt': 'Album Photo 2', 'caption': 'Vacation Day 2'},
        {'src': '/images/album/photo3.jpg', 'alt': 'Album Photo 3', 'caption': 'Vacation Day 3'},
        {'src': '/images/album/photo4.jpg', 'alt': 'Album Photo 4', 'caption': 'Vacation Day 4'}
    ]"
    :autoplay="true"
    :autoplayInterval="4000"
    :showThumbnails="true"
    transition="fade"
/>

