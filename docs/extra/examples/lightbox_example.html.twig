{# Example 10: Grid Gallery with Trigger Links #}
<h2>Grid Gallery</h2>
<div class="row g-3">
    <div class="col-md-4">
        <a href="/images/grid/photo1.jpg" 
           data-lightbox="grid-gallery"
           data-caption="Grid Photo 1">
            <img src="/images/grid/thumb1.jpg" alt="Grid Photo 1" class="img-fluid rounded">
        </a>
    </div>
    <div class="col-md-4">
        <a href="/images/grid/photo2.jpg" 
           data-lightbox="grid-gallery"
           data-caption="Grid Photo 2">
            <img src="/images/grid/thumb2.jpg" alt="Grid Photo 2" class="img-fluid rounded">
        </a>
    </div>
    <div class="col-md-4">
        <a href="/images/grid/photo3.jpg" 
           data-lightbox="grid-gallery"
           data-caption="Grid Photo 3">
            <img src="/images/grid/thumb3.jpg" alt="Grid Photo 3" class="img-fluid rounded">
        </a>
    </div>
</div>

{# Lightbox component (renders hidden gallery) #}
<twig:bs:lightbox
    id="grid-gallery"
    :images="[
        {'src': '/images/grid/photo1.jpg', 'alt': 'Grid Photo 1', 'caption': 'Grid Photo 1'},
        {'src': '/images/grid/photo2.jpg', 'alt': 'Grid Photo 2', 'caption': 'Grid Photo 2'},
        {'src': '/images/grid/photo3.jpg', 'alt': 'Grid Photo 3', 'caption': 'Grid Photo 3'}
    ]"
/>

