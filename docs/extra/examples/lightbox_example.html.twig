{# Example 7: Minimal Gallery #}
<h2>Minimal Gallery</h2>
<twig:bs:lightbox
    :images="[
        {'src': '/images/minimal/photo1.jpg', 'alt': 'Photo 1'},
        {'src': '/images/minimal/photo2.jpg', 'alt': 'Photo 2'},
        {'src': '/images/minimal/photo3.jpg', 'alt': 'Photo 3'}
    ]"
    :showCounter="false"
    :showThumbnails="false"
    :showCaptions="false"
    :showDownload="false"
    :showFullscreen="false"
    transition="none"
/>

{# Example 8: Dynamic Images from Controller #}
<h2>Dynamic Gallery</h2>
{# Assuming 'galleryImages' is passed from the controller #}
<twig:bs:lightbox
    :images="galleryImages"
    :startIndex="0"
    :showThumbnails="true"
    :enableZoom="true"
    :enableKeyboard="true"
    :enableSwipe="true"
/>

{# Example 9: Custom Styled Lightbox #}
<h2>Custom Styled Lightbox</h2>
<twig:bs:lightbox
    :images="[
        {'src': '/images/custom/photo1.jpg', 'alt': 'Photo 1', 'caption': 'Custom Style 1'},
        {'src': '/images/custom/photo2.jpg', 'alt': 'Photo 2', 'caption': 'Custom Style 2'}
