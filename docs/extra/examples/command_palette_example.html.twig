{# ============================================ #}
{# JavaScript Event Handling #}
{# ============================================ #}

<script>
// Listen for command execution events
document.addEventListener('command:execute', (event) => {
    const { id, action, command } = event.detail;
    
    // Handle custom actions
    if (action === 'clear-cache') {
        fetch('/api/cache/clear', { method: 'POST' })
            .then(() => alert('Cache cleared!'));
    } else if (action === 'export-data') {
        window.location.href = '/export';
    }
});
</script>

{# ============================================ #}
{# Complete Example with All Features #}
{# ============================================ #}

<twig:bs:command-palette
    {# Trigger Configuration #}
    trigger="Cmd+K"
    triggerKey="k"
    :triggerCtrl="false"
    :triggerMeta="true"
    :triggerShift="false"
    :triggerAlt="false"
    
    {# Appearance #}
    placeholder="Type a command or search..."
    emptyMessage="No commands found"
    :showShortcuts="true"
    :showIcons="true"
    :showRecent="true"
    :maxRecent="5"
    
    {# Behavior #}
    searchUrl="/command-palette"
    :minChars="0"
    :debounce="150"
    :closeOnSelect="true"
    :closeOnEscape="true"
    :closeOnBackdrop="true"
    
    {# Modal Styling #}
    size="lg"
    placement="top"
    :centered="false"
    :scrollable="false"
    
    {# Animation #}
    animation="fade"
    :animationDuration="200"
    
    {# Groups #}
    :grouped="true"
    :defaultGroups="['Quick Actions', 'Navigation', 'Admin']"
    
    {# Custom Styling #}
    class="my-palette"
    :attr="{'data-analytics': 'true'}"
/>

