{# Command Palette Component - Usage Examples #}

{# ============================================ #}
{# Basic Usage #}
{# ============================================ #}

{# Minimal - Default Cmd+K shortcut #}
<twig:bs:command-palette />

{# ============================================ #}
{# Custom Configuration #}
{# ============================================ #}

{# Custom search endpoint and settings #}
<twig:bs:command-palette
    searchUrl="/api/commands"
    placeholder="What do you want to do?"
    :maxRecent="10"
    size="xl"
/>

{# ============================================ #}
{# Custom Keyboard Trigger #}
{# ============================================ #}

{# Cmd+P for navigation palette #}
<twig:bs:command-palette
    triggerKey="p"
    trigger="Cmd+P"
    placeholder="Go to..."
    searchUrl="/api/navigation"
    :showIcons="false"
/>

{# Ctrl+Space for admin commands #}
<twig:bs:command-palette
    triggerKey=" "
    :triggerCtrl="true"
    :triggerMeta="false"
    trigger="Ctrl+Space"
    placeholder="Admin command..."
    searchUrl="/api/admin-commands"
/>

{# ============================================ #}
{# Quick Actions Palette #}
{# ============================================ #}

<twig:bs:command-palette
    placeholder="Quick action..."
    searchUrl="/api/quick-actions"
    :defaultGroups="['Actions', 'Tools', 'Settings']"
    :showShortcuts="true"
    :showIcons="true"
    :closeOnSelect="true"
/>

{# ============================================ #}
{# Navigation-Only Palette #}
{# ============================================ #}

<twig:bs:command-palette
    triggerKey="p"
    trigger="Cmd+P"
    placeholder="Search pages..."
    searchUrl="/api/pages"
    :grouped="false"
    :showIcons="false"
    :showRecent="true"
    :maxRecent="15"
/>

{# ============================================ #}
{# Admin Command Center #}
{# ============================================ #}

<twig:bs:command-palette
    placeholder="Admin command..."
    searchUrl="/api/admin/commands"
    size="xl"
    :showRecent="true"
    :maxRecent="10"
    :showShortcuts="true"
    :defaultGroups="['User Management', 'System', 'Content', 'Reports']"
/>

{# ============================================ #}
{# Custom Styling #}
{# ============================================ #}

<twig:bs:command-palette
    class="custom-palette elevated-shadow"
    :attr="{
        'data-theme': 'dark',
        'data-analytics': 'command-palette'
    }"
/>

{# ============================================ #}
{# No Grouping #}
{# ============================================ #}

<twig:bs:command-palette
    :grouped="false"
    searchUrl="/api/commands/flat"
    placeholder="Search all commands..."
/>

{# ============================================ #}
{# Minimal UI #}
{# ============================================ #}

<twig:bs:command-palette
    :showShortcuts="false"
    :showIcons="false"
    :showRecent="false"
    placeholder="Search..."
    size="sm"
/>

