{# Split Panes Component - Example Usage #}

{# Example 1: Basic Horizontal Split (Code Editor) #}
<div style="height: 600px;">
    <twig:bs:split-panes 
        orientation="horizontal"
        :initialSize="'40%'"
        :persistent="true"
        id="code-editor">
        
        <twig:block name="first">
            <div class="h-100 p-3 bg-dark text-white font-monospace">
                <h5 class="mb-3">editor.js</h5>
                <pre class="mb-0"><code>function hello() {
    console.log('Hello World');
    return true;
}</code></pre>
            </div>
        </twig:block>
        
        <twig:block name="second">
            <div class="h-100 p-3">
                <h5 class="mb-3">Preview</h5>
                <div class="alert alert-success">
                    ✓ Code compiled successfully
                </div>
                <div id="output">
                    <p>Output: Hello World</p>
                </div>
            </div>
        </twig:block>
    </twig:bs:split-panes>
</div>

