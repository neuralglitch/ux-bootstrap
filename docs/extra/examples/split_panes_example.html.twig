{# Example 4: Vertical Split (Console) #}
<div class="mt-5" style="height: 600px;">
    <twig:bs:split-panes 
        orientation="vertical"
        :initialSize="'60%'"
        :minSize="'30%'"
        :maxSize="'80%'"
        :persistent="true"
        id="console-split">
        
        <twig:block name="first">
            <div class="h-100 p-3">
                <h5 class="mb-3">Code Editor</h5>
                <textarea class="form-control font-monospace" rows="15" style="resize: none;">// Your code here
function calculateTotal(items) {
    return items.reduce((sum, item) => sum + item.price, 0);
}

const items = [
    { name: 'Product 1', price: 29.99 },
    { name: 'Product 2', price: 49.99 }
];

console.log('Total:', calculateTotal(items));</textarea>
                <div class="mt-3">
                    <button class="btn btn-primary">Run Code</button>
                </div>
            </div>
        </twig:block>
        
        <twig:block name="second">
            <div class="h-100 p-3 bg-dark text-white font-monospace overflow-auto">
                <h6 class="mb-3">Console Output</h6>
                <pre class="mb-0"><code>$ Running script...
Total: 79.98
✓ Execution completed in 0.042s</code></pre>
            </div>
        </twig:block>
    </twig:bs:split-panes>
</div>

{# Example 5: Three Panes (Nested) #}
<div class="mt-5" style="height: 600px;">
    <twig:bs:split-panes 
        orientation="horizontal"
        :initialSize="'250px'"
        :persistent="true"
        id="three-pane-outer">
        
        <twig:block name="first">
            <div class="h-100 p-3 bg-light border-end">
                <h5>Sidebar</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-decoration-none">Dashboard</a></li>
                    <li><a href="#" class="text-decoration-none">Projects</a></li>
                    <li><a href="#" class="text-decoration-none">Tasks</a></li>
                    <li><a href="#" class="text-decoration-none">Settings</a></li>
                </ul>
            </div>
        </twig:block>
        
        <twig:block name="second">
            {# Nested vertical split #}
            <twig:bs:split-panes 
                orientation="vertical"
                :initialSize="'70%'"
                :persistent="true"
                id="three-pane-inner">
                
                <twig:block name="first">
                    <div class="h-100 p-3">
                        <h5>Main Content</h5>
                        <p>This is the main content area.</p>
                    </div>
                </twig:block>
                
                <twig:block name="second">
                    <div class="h-100 p-3 border-top bg-light">
                        <h6>Properties Panel</h6>
                        <p class="small text-muted">Additional information and settings</p>
                    </div>
                </twig:block>
            </twig:bs:split-panes>
        </twig:block>
    </twig:bs:split-panes>
</div>

