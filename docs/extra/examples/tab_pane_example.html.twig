{# Example 4: Multi-Step Form (Wizard) #}
<div class="container my-4" style="max-width: 700px;">
  <h2 class="text-center mb-4">Account Registration</h2>
  
  {# Progress Indicator #}
  <ul class="nav nav-pills nav-justified mb-4" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" data-bs-toggle="tab" 
              data-bs-target="#tab-step1" type="button">
        <small>Step 1</small><br>Personal Info
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="tab" 
              data-bs-target="#tab-step2" type="button">
        <small>Step 2</small><br>Account Setup
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" data-bs-toggle="tab" 
              data-bs-target="#tab-step3" type="button">
        <small>Step 3</small><br>Confirmation
      </button>
    </li>
  </ul>

  <form>
    <div class="tab-content">
      <twig:bs:tab-pane title="Step1" :active="true">
        <h3>Personal Information</h3>
        <p class="text-muted">Tell us a bit about yourself</p>
        
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control" id="firstName" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" required>
          </div>
        </div>
        
        <div class="mb-3">
          <label for="dateOfBirth" class="form-label">Date of Birth</label>
          <input type="date" class="form-control" id="dateOfBirth" required>
        </div>
        
        <div class="mb-3">
          <label for="phone" class="form-label">Phone Number</label>
          <input type="tel" class="form-control" id="phone">
        </div>
        
        <div class="text-end">
          <button type="button" class="btn btn-primary" 
                  data-bs-toggle="tab" data-bs-target="#tab-step2">
            Next Step →
          </button>
        </div>
      </twig:bs:tab-pane>

      <twig:bs:tab-pane title="Step2">
        <h3>Account Setup</h3>
        <p class="text-muted">Create your account credentials</p>
        
        <div class="mb-3">
          <label for="emailStep2" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="emailStep2" required>
        </div>
        
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" id="username" required>
        </div>
        
        <div class="mb-3">
          <label for="passwordStep2" class="form-label">Password</label>
          <input type="password" class="form-control" id="passwordStep2" required>
        </div>
        
        <div class="mb-3">
          <label for="confirmPasswordStep2" class="form-label">Confirm Password</label>
          <input type="password" class="form-control" id="confirmPasswordStep2" required>
        </div>
        
        <div class="d-flex justify-content-between">
          <button type="button" class="btn btn-secondary" 
                  data-bs-toggle="tab" data-bs-target="#tab-step1">
            ← Previous
          </button>
          <button type="button" class="btn btn-primary" 
                  data-bs-toggle="tab" data-bs-target="#tab-step3">
            Next Step →
          </button>
        </div>
      </twig:bs:tab-pane>

      <twig:bs:tab-pane title="Step3">
        <h3>Review & Confirm</h3>
        <p class="text-muted">Please review your information before submitting</p>
        
        <div class="alert alert-info">
          <h5>Summary</h5>
          <p class="mb-1"><strong>Name:</strong> [User will see their name here]</p>
          <p class="mb-1"><strong>Email:</strong> [User will see their email here]</p>
          <p class="mb-0"><strong>Username:</strong> [User will see their username here]</p>
        </div>
        
        <div class="form-check mb-3">
          <input class="form-check-input" type="checkbox" id="termsAgree" required>
          <label class="form-check-label" for="termsAgree">
            I agree to the Terms of Service and Privacy Policy
          </label>
        </div>
        
        <div class="d-flex justify-content-between">
          <button type="button" class="btn btn-secondary" 
                  data-bs-toggle="tab" data-bs-target="#tab-step2">
            ← Previous
          </button>
          <button type="submit" class="btn btn-success">
            Complete Registration
          </button>
        </div>
      </twig:bs:tab-pane>
    </div>
  </form>
</div>

{# 
  Note: These examples show various use cases for the bs:tab-pane component:
  
  1. Settings Page - Multiple configuration sections
  2. Dashboard - Data visualization with pills navigation
  3. Product Details - Product information organization
  4. Multi-Step Form - Wizard-style registration process
  
  The component automatically handles:
  - ID generation from title
  - ARIA attributes for accessibility
  - Fade transitions
  - Bootstrap styling
#}

