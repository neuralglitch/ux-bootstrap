{# ColorPicker Component Examples #}
{# This file demonstrates all features and use cases of the ColorPicker component #}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ColorPicker Component Examples</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container py-5">
    <h1 class="mb-4">ColorPicker Component Examples</h1>
    
    {# Example 1: Basic ColorPicker #}
    <section class="mb-5">
        <h2 class="h3 mb-3">1. Basic ColorPicker</h2>
        <div class="card">
            <div class="card-body">
                <twig:bs:color-picker
                    name="basic_color"
                    label="Select a Color"
                />
            </div>
        </div>
    </section>

    {# Example 2: ColorPicker with Presets #}
    <section class="mb-5">
        <h2 class="h3 mb-3">2. ColorPicker with Preset Colors</h2>
        <div class="card">
            <div class="card-body">
                {% set basicColors = [
                    '#FF0000', '#00FF00', '#0000FF',
                    '#FFFF00', '#FF00FF', '#00FFFF',
                    '#000000', '#FFFFFF', '#808080'
                ] %}
                
                <twig:bs:color-picker
                    name="preset_color"
                    label="Choose from Presets"
                    value="#FF0000"
                    :presets="basicColors"
                    :columns="3"
                />
            </div>
        </div>
    </section>

    {# Example 3: Bootstrap Theme Colors #}
    <section class="mb-5">
        <h2 class="h3 mb-3">3. Bootstrap Theme Colors</h2>
        <div class="card">
            <div class="card-body">
                {% set bootstrapColors = [
                    '#0d6efd',  {# primary #}
                    '#6c757d',  {# secondary #}
                    '#198754',  {# success #}
                    '#dc3545',  {# danger #}
                    '#ffc107',  {# warning #}
                    '#0dcaf0',  {# info #}
                    '#f8f9fa',  {# light #}
                    '#212529',  {# dark #}
                ] %}
                
                <twig:bs:color-picker
                    name="theme_color"
                    label="Theme Color"
                    value="#0d6efd"
                    :presets="bootstrapColors"
                    :columns="4"
                    helpText="Select a Bootstrap theme color"
                />
            </div>
        </div>
    </section>

    {# Example 4: Material Design Palette #}
    <section class="mb-5">
        <h2 class="h3 mb-3">4. Material Design Color Palette</h2>
        <div class="card">
            <div class="card-body">
                {% set materialColors = [
                    '#F44336', '#E91E63', '#9C27B0', '#673AB7',
                    '#3F51B5', '#2196F3', '#03A9F4', '#00BCD4',
                    '#009688', '#4CAF50', '#8BC34A', '#CDDC39',
                    '#FFEB3B', '#FFC107', '#FF9800', '#FF5722',
                    '#795548', '#9E9E9E', '#607D8B', '#000000'
                ] %}
                
                <twig:bs:color-picker
                    name="material_color"
                    label="Material Color"
                    :presets="materialColors"
                    :columns="5"
                    swatchSize="lg"
                />
            </div>
        </div>
    </section>

    {# Example 5: Size Variants #}
    <section class="mb-5">
        <h2 class="h3 mb-3">5. Size Variants</h2>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Small</h5>
                        <twig:bs:color-picker
                            name="color_sm"
                            label="Small Size"
                            size="sm"
                            swatchSize="sm"
                            :presets="['#FF0000', '#00FF00', '#0000FF', '#FFFF00', '#FF00FF', '#00FFFF']"
                        />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Default</h5>
                        <twig:bs:color-picker
                            name="color_default"
                            label="Default Size"
                            :presets="['#FF0000', '#00FF00', '#0000FF', '#FFFF00', '#FF00FF', '#00FFFF']"
                        />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Large</h5>
                        <twig:bs:color-picker
                            name="color_lg"
                            label="Large Size"
                            size="lg"
                            swatchSize="lg"
                            :presets="['#FF0000', '#00FF00', '#0000FF', '#FFFF00', '#FF00FF', '#00FFFF']"
                        />
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Example 6: Inline Mode #}
    <section class="mb-5">
        <h2 class="h3 mb-3">6. Inline Mode</h2>
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-wrap gap-3">
                    <twig:bs:color-picker
                        name="text_color"
                        label="Text"
                        :inline="true"
                        value="#000000"
                        :presets="['#000000', '#212529', '#6c757d']"
                        size="sm"
                    />
                    
                    <twig:bs:color-picker
                        name="bg_color"
                        label="Background"
                        :inline="true"
                        value="#ffffff"
                        :presets="['#ffffff', '#f8f9fa', '#e9ecef']"
                        size="sm"
                    />
                    
                    <twig:bs:color-picker
                        name="border_color"
                        label="Border"
                        :inline="true"
                        value="#dee2e6"
                        :presets="['#dee2e6', '#adb5bd', '#6c757d']"
                        size="sm"
                    />
                </div>
            </div>
        </div>
    </section>

    {# Example 7: Form Integration #}
    <section class="mb-5">
        <h2 class="h3 mb-3">7. Form Integration with Validation</h2>
        <div class="card">
            <div class="card-body">
                <form method="post" class="needs-validation" novalidate>
                    <twig:bs:color-picker
                        name="primary_color"
                        label="Primary Brand Color"
                        value="#007bff"
                        :required="true"
                        :presets="['#007bff', '#0056b3', '#004085', '#002752']"
                        helpText="Choose your primary brand color (required)"
                    />
                    
                    <twig:bs:color-picker
                        name="secondary_color"
                        label="Secondary Brand Color"
                        :presets="['#6c757d', '#5a6268', '#495057', '#343a40']"
                        helpText="Optional secondary color"
                    />
                    
                    <twig:bs:color-picker
                        name="accent_color"
                        label="Accent Color"
                        :presets="['#28a745', '#20c997', '#17a2b8', '#ffc107']"
                        placeholder="FFFFFF"
                    />
                    
                    <button type="submit" class="btn btn-primary mt-3">Save Brand Colors</button>
                </form>
            </div>
        </div>
    </section>

    {# Example 8: Presets Only (No Custom Input) #}
    <section class="mb-5">
        <h2 class="h3 mb-3">8. Presets Only</h2>
        <div class="card">
            <div class="card-body">
                <p class="text-muted">Only allow selection from predefined colors</p>
                <twig:bs:color-picker
                    name="preset_only"
                    label="Select from Presets"
                    :presets="['#FF0000', '#00FF00', '#0000FF', '#FFFF00', '#FF00FF', '#00FFFF']"
                    :showInput="false"
                    :allowCustom="false"
                />
            </div>
        </div>
    </section>

    {# Example 9: Custom Colors Only (No Presets) #}
    <section class="mb-5">
        <h2 class="h3 mb-3">9. Custom Colors Only</h2>
        <div class="card">
            <div class="card-body">
                <p class="text-muted">Allow any custom color without preset restrictions</p>
                <twig:bs:color-picker
                    name="custom_only"
                    label="Choose Any Color"
                    :showPresets="false"
                    placeholder="Enter hex color"
                    helpText="Enter a hex color code or use the color picker"
                />
            </div>
        </div>
    </section>

    {# Example 10: Grayscale Palette #}
    <section class="mb-5">
        <h2 class="h3 mb-3">10. Grayscale Palette</h2>
        <div class="card">
            <div class="card-body">
                {% set grayscaleColors = [
                    '#000000', '#111111', '#222222', '#333333',
                    '#444444', '#555555', '#666666', '#777777',
                    '#888888', '#999999', '#AAAAAA', '#BBBBBB',
                    '#CCCCCC', '#DDDDDD', '#EEEEEE', '#FFFFFF'
                ] %}
                
                <twig:bs:color-picker
                    name="grayscale_color"
                    label="Grayscale Color"
                    :presets="grayscaleColors"
                    :columns="8"
                />
            </div>
        </div>
    </section>

    {# Example 11: Different Column Layouts #}
    <section class="mb-5">
        <h2 class="h3 mb-3">11. Different Column Layouts</h2>
        <div class="row g-3">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">3 Columns</h5>
                        <twig:bs:color-picker
                            name="color_3col"
                            :presets="['#FF0000', '#00FF00', '#0000FF', '#FFFF00', '#FF00FF', '#00FFFF']"
                            :columns="3"
                        />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Single Row (12 columns)</h5>
                        <twig:bs:color-picker
                            name="color_row"
                            :presets="['#FF0000', '#00FF00', '#0000FF', '#FFFF00']"
                            :columns="12"
                        />
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Example 12: Disabled State #}
    <section class="mb-5">
        <h2 class="h3 mb-3">12. Disabled State</h2>
        <div class="card">
            <div class="card-body">
                <twig:bs:color-picker
                    name="disabled_color"
                    label="Disabled Color Picker"
                    value="#999999"
                    :disabled="true"
                    :presets="['#FF0000', '#00FF00', '#0000FF']"
                    helpText="This color picker is disabled"
                />
            </div>
        </div>
    </section>

    {# Example 13: Theme Customization Example #}
    <section class="mb-5">
        <h2 class="h3 mb-3">13. Website Theme Customization</h2>
        <div class="card">
            <div class="card-body">
                <form id="themeForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <twig:bs:color-picker
                                name="header_bg"
                                label="Header Background"
                                value="#343a40"
                                :presets="['#343a40', '#212529', '#495057', '#6c757d']"
                            />
                        </div>
                        <div class="col-md-6">
                            <twig:bs:color-picker
                                name="header_text"
                                label="Header Text"
                                value="#ffffff"
                                :presets="['#ffffff', '#f8f9fa', '#e9ecef', '#dee2e6']"
                            />
                        </div>
                        <div class="col-md-6">
                            <twig:bs:color-picker
                                name="primary_btn"
                                label="Primary Button"
                                value="#0d6efd"
                                :presets="['#0d6efd', '#0056b3', '#004085', '#198754']"
                            />
                        </div>
                        <div class="col-md-6">
                            <twig:bs:color-picker
                                name="link_color"
                                label="Link Color"
                                value="#0d6efd"
                                :presets="['#0d6efd', '#0056b3', '#0dcaf0', '#6610f2']"
                            />
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">Apply Theme</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    {# Example 14: With Custom Attributes #}
    <section class="mb-5">
        <h2 class="h3 mb-3">14. With Custom Attributes</h2>
        <div class="card">
            <div class="card-body">
                <twig:bs:color-picker
                    name="custom_attrs_color"
                    label="Color with Custom Attributes"
                    :presets="['#FF0000', '#00FF00', '#0000FF']"
                    :attr="{
                        'data-analytics': 'color-picker',
                        'id': 'my-custom-picker'
                    }"
                    :inputAttr="{
                        'data-validate': 'color',
                        'autocomplete': 'off'
                    }"
                />
            </div>
        </div>
    </section>

    {# Example 15: JavaScript Integration #}
    <section class="mb-5">
        <h2 class="h3 mb-3">15. JavaScript Integration</h2>
        <div class="card">
            <div class="card-body">
                <twig:bs:color-picker
                    name="js_color"
                    label="Color with Event Listener"
                    :presets="['#FF0000', '#00FF00', '#0000FF', '#FFFF00', '#FF00FF', '#00FFFF']"
                    :attr="{'id': 'js-color-picker'}"
                />
                
                <div class="mt-3">
                    <div class="alert alert-info d-flex align-items-center gap-2">
                        <span>Selected Color:</span>
                        <span id="selectedColorDisplay" class="badge bg-secondary">#000000</span>
                        <div id="colorPreview" style="width: 30px; height: 30px; border: 2px solid #dee2e6; border-radius: 4px; background-color: #000000;"></div>
                    </div>
                </div>
                
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        const picker = document.getElementById('js-color-picker');
                        const display = document.getElementById('selectedColorDisplay');
                        const preview = document.getElementById('colorPreview');
                        
                        picker.addEventListener('bs-color-picker:change', function(event) {
                            const color = event.detail.color;
                            display.textContent = color;
                            preview.style.backgroundColor = color;
                        });
                    });
                </script>
            </div>
        </div>
    </section>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

